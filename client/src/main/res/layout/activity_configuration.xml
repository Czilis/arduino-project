<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 blind"
        android:id="@+id/switch_blind1" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 blind"
        android:id="@+id/switch_blind2" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 bilnd"
        android:id="@+id/switch_blind3" />

<LinearLayout
    android:layout_marginTop="20dp"
    style="@style/wrap_both"
    android:orientation="horizontal">
    <TextView
        style="@style/wrap_both"
        android:text="@string/actual_temp"/>
    <TextView
        android:id="@+id/txt_actual_temp"
        android:layout_marginLeft="10dp"
        style="@style/wrap_both"
        tools:text="12"/>
</LinearLayout>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/txt_set_temp"
        android:minWidth="100dp"
        android:hint="Set temperature"
        style="@style/wrap_both"
        android:inputType="number"/>
    <Button
        android:id="@+id/btn_send"
        android:layout_marginTop="50dp"
        style="@style/wrap_both"
        android:text="SET CONFIGURATION"
        android:layout_gravity="center"/>
</LinearLayout>